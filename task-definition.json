{
    "family": "ecr-demo-ec2",
    "containerDefinitions": [
        {
            "image": "REPOSITORY_URI:BUILD_NUMBER",
            "name": "ecr-demo",
	    "essential": true,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000
                }
            ]
        }
    ],
    "cpu": "256",
    "memory": "512",
    "requiresCompatibilities": [
             "ec2"
    ],
    "networkMode": "bridge",
    "executionRoleArn": "{{ecsTaskExecutionRoleArn}}"
